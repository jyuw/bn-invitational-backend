<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <ul class="nav">
      <% if current_user %>
      <li class="nav-item">
        <a class="nav-link" href="#athletes_section">Athletes</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#results">Results</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#insufficient_votes">Insufficient Votes</a>
      </li>
        <li class="nav-item"> <%= form_with url: destroy_user_session_path, method: :delete, local: true do |form| %> </li>
          <li class="nav-link"><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
        <% end %>
      <% end %>
    </ul>

      <% flash.each do |key, value| %>
        <div class="text-center">
          <%= value  %>
        </div>
      <% end %>
    <%= yield %>
  </body>
</html>
